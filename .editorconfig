root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = 128
tab_width = 2
trim_trailing_whitespace = true
# editorconfig-tools is unable to ignore longs strings or urls

[*.styl]
indent_size = 2

[{*.cjs, *.js}]
indent_size = 2
max_line_length = 128
tab_width = 2

[{.babelrc, .stylelintrc, .eslintrc, jest.config, bowerrc, *.jsb3, *.jsb2, *.json}]
indent_size = 2
