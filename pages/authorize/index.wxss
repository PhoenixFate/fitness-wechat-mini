.login-container {
  height: 100vh;
  overflow-y: auto;
  background: linear-gradient(#1e7d91, #ffffff);
}
.login-container .authorize-image {
  width: 100vw;
  height: 200px;
}
.login-container .authorize-wechat {
  margin-bottom: 40rpx;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #ffffff;
  margin-top: 100rpx;
}
.logo {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 200rpx;
  width: 200rpx;
  border-radius: 100rpx;
  border: 1rpx solid #333333;
}
.background-disable {
  background: gray;
}
.background-able {
  background: #13c2c2;
}
.button-common {
  width: 80vw;
  height: 100rpx;
  border-radius: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.other-login-button {
  width: 80vw;
  height: 100rpx;
  color: #333333;
  display: flex;
  align-items: center;
  justify-content: center;
}
