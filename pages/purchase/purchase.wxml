<!--pages/purchase/purchase.wxml-->
<view style="height:100vh;position:relative">
  <view style="height:50rpx"></view>
  <swiper style="height:380rpx !important" current = "{{currentIndex}}" bindchange="swipeCard">
    <swiper-item wx:for="{{list}}" wx:for-item="item" wx:key="vipCardId" wx:for-index="index">
      <view class="card-main card-type-{{index}}">
        <view style="display:flex">
          <view class="card-title">{{item.vipCardName}}</view>
          <view class="card-day">{{item.addVipDays}}天</view>
        </view>
        <view style="line-height:120rpx;margin-left:100rpx">
          <text class="card-vip" style="margin-left:80rpx">V</text>
          <text class="card-vip" style="margin-left:30rpx">I</text>
          <text class="card-vip" style="margin-left:30rpx">P</text>
        </view>
    </view>
    </swiper-item>
  </swiper>
  
  <view>
    <view style="display: flex; font-size: 36rpx;font-weight: bold;padding:20rpx">支付方式</view>
    <van-radio-group value="{{ radio }}">
    <van-cell-group>
      <!-- <van-cell clickable data-name="1" bind:click="selectAliPay">
        <view slot="title" style="display:flex">
          <image style="width:50rpx;height:50rpx" src="../../images/zfb.jpg"></image>
          <view class="van-cell-text" style="margin-left:30rpx">支付宝</view>
        </view>
        <van-radio slot="right-icon" name="1" />
      </van-cell> -->
      <van-cell clickable data-name="2" bind:click="selectWechatPay">
        <view slot="title" style="display:flex">
          <image style="width:50rpx;height:50rpx" src="../../images/wechat.jpg"></image>
          <view class="van-cell-text" style="margin-left:30rpx">微信</view>
        </view>
        <van-radio slot="right-icon" name="2" />
      </van-cell>
    </van-cell-group>
    </van-radio-group>
  </view>
  <van-submit-bar
    button-text="立即购买"
    bind:submit="buyCard"
    loading="{{loading}}"
  >
  <view style="display:flex;width:60vw;float:left">
      <view style="font-size:36rpx;font-weight:bold">
        合计：
      </view>
      <view style="color:#ee0a24;font-size:36rpx;line-height:56rpx">
        {{price}}元
      </view>  
    </view>
  </van-submit-bar>
